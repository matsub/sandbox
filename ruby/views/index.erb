<%# views/index.erb %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>sample</title>
  </head>
  <body>
    <% if @posts.empty? %>
      一件も投稿がありません
    <% else %>
      <ul>
      <% @posts.each do |post| %>
        <li>
        <%= post.title %>
        </li>
      <% end %>
      </ul>
    <% end %>
    <a href="/new">投稿画面へ</a>
  </body>
</html>
